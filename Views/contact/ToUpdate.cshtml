@* logo ------------- *@
<nav class="logo-cart">
  @* logo ------------- *@
  <div>
    <a href="/Home/home">
      <img class="logo" src="~/CSS/img/logo.jpeg" />
    </a>
  </div>
</nav>

@* menu ---------- *@
<header>
  <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">

          <li class="nav-item">
            <a class="nav-link text-dark" href="/Home/home/#about"><strong> Sobre
              </strong></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="stories"><strong> Historias
              </strong></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/itemOrder/Insert/#books3"><strong> Livros
              </strong></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="itemOrder" asp-action="Insert"><strong> Acessorios
              </strong></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="articles"><strong> Artigos
              </strong></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="gallery"><strong> Galeria de foto
              </strong></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="galleryVideo"><strong> Galeria de video
              </strong></a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/Home/home/#contactNow"><strong>Contato</strong></a>
          </li>

          @if (Context.Session.GetInt32("IdUsuario") == null)
          {
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="UserClient" asp-action="Inserir"><strong>
                  Cadastrar usuario</strong></a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="UserClient" asp-action="Login"><strong>
                  Login</strong></a>
            </li>
          }
          else
          {
            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="UserClient" asp-action="List"><strong> Usuarios
                  cadastrados</strong></a>
            </li>

            <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="UserClient" asp-action="Logout"><strong>
                  Logout</strong></a>
            </li>
          }
        </ul>
      </div>
    </div>
  </nav>
</header>

<div class="box-container">
  <div class="box-item">
    <div class="flip-box">
      <div class="flip-box-front text-center" style="background-image: url('/CSS/img/ghost.jpg');">
        <div class="inner innenP color-white">
          <h3 class="flip-box-header">Entre em contato</h3>
          <p>Aproveite e tire suas dúvidas.</p>
          <img src="https://s25.postimg.cc/65hsttv9b/cta-arrow.png" alt="" class="flip-box-img">
        </div>
      </div>
      <div class="flip-box-back text-center" style="background-image: url('/CSS/img/ghost.jpg');">
        <form asp-action="ToUpdate" method="post">
          <div class="flip-box-back text-center">
            <div class="inner innerP3 color-white">
              <p><label class="flip-box-header nom" asp-for="name">Nome: </label>
                <input class="flip-box-header" autocomplete="off" placeholder="digite seu nome" asp-for="name" required>
              </p>
              <p><label class="emai" asp-for="email">E-mail: </label>
                <input autocomplete="off" placeholder="fulano@mail.com" asp-for="email" required>
              </p>
              <p><label class="what" asp-for="whattsapp">whattsapp: </label>
                <input autocomplete="off" placeholder="(xx)xxxx-xxxx" asp-for="whattsapp" required>
              </p>
              <p> <label asp-for="doubt">Duvida: </label>
                <textarea autocomplete="off" placeholder="Deixe sua duvida" asp-for="doubt" required
                  class="tarea"></textarea>
              </p>


              <input asp-for="idContact" type="hidden">
              <button class="flip-box-button" type="submit">Alterar</button>
              <button class="flip-box-button" type="reset">Resetar</button>
            </div>

          </div>

        </form>
      </div>
    </div>
  </div>
</div>

